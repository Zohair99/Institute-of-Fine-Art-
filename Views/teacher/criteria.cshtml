
@{
    ViewData["Title"] = "criteria";
    Layout = "~/Views/Shared/teacher.cshtml";
}



<!-- Main Content -->
<div class="content-wrapper py-4">
    <div class="centered-content">
        <div class="card-style">
            <div class="mb-4 d-flex justify-content-between align-items-center">
                <h4 class="fw-bold mb-0"><i class="fa fa-gavel me-2 text-danger"></i>Competition Criteria & Student Eligibility</h4>
                <a href="@Url.Action("editcriteria", "teacher")" class="btn btn-danger btn-sm">
                    <i class="fa fa-pen-nib me-1"></i> Edit Criteria
                </a>
            </div>

            <section class="mb-5">
                <h5 class="mb-3 text-success"><i class="fa fa-check-circle me-2"></i>Competition Criteria</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">🎨 <strong>Theme Alignment:</strong> All artwork must reflect the competition's designated theme.</li>
                    <li class="list-group-item">🖼️ <strong>Originality:</strong> No plagiarism or AI-generated content allowed.</li>
                    <li class="list-group-item">🎨 <strong>Accepted Mediums:</strong> Digital, oil, watercolor, sketches, mixed media.</li>
                    <li class="list-group-item">📁 <strong>Submission Format:</strong> JPG/PNG (Max 10MB), title, description, statement.</li>
                    <li class="list-group-item">⏰ <strong>Deadline:</strong> Submit before deadline.</li>
                    <li class="list-group-item">🧑‍⚖️ <strong>Judging:</strong> Creativity, originality, technique, impact.</li>
                </ul>
            </section>

            <hr />

            <section>
                <h5 class="mb-3 text-info"><i class="fa fa-user-graduate me-2"></i>Student Eligibility</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">🏫 <strong>Enrollment:</strong> Must be enrolled in recognized institution.</li>
                    <li class="list-group-item">
                        🎂 <strong>Age Groups:</strong>
                        <ul class="mb-0 ps-4">
                            <li>Junior: 12–17 years</li>
                            <li>Senior: 18–25 years</li>
                        </ul>
                    </li>
                    <li class="list-group-item">🪪 <strong>ID Verification:</strong> Valid student ID or official letter.</li>
                    <li class="list-group-item">🖌️ <strong>One Entry Rule:</strong> Only one artwork per competition.</li>
                    <li class="list-group-item">📝 <strong>Portal Registration:</strong> Must register before uploading.</li>
                    <li class="list-group-item">📄 <strong>Consent (Under 18):</strong> Parental consent is mandatory.</li>
                </ul>
            </section>
        </div>
    </div>

</div>


