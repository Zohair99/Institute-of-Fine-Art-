@model IOFA.Models.Teacher
@{
    ViewData["Title"] = "teacherprofile";
    Layout = "~/Views/Shared/teacher.cshtml";
}


<!-- Main Scrollable Content -->
<div class="main-scrollable-content">
    <div class="card-style">
        <div class="text-center mb-4">
            <img src="~/assets/img/user.jpg" alt="Teacher Profile" class="profile-img" />
            <h4 class="mt-3 mb-1 fw-bold">@Context.Session.GetString("TeacherName")</h4>
            <p class="text-muted mb-2">Senior Art Instructor</p>
           
        </div>

        <hr class="my-4" />

        <div class="row profile-info">
            <div class="col-md-6 mb-3">
                <label>Email:</label>
                <div class="text-muted">@Context.Session.GetString("TeacherEmail")</div>
            </div>
            <div class="col-md-6 mb-3">
                <label>Phone:</label>
                <div class="text-muted">@Context.Session.GetString("TeacherPhone")</div>
            </div>
            
            <div class="col-md-6 mb-3">
                <label>Experience:</label>
                <div class="text-muted">8 Years</div>
            </div>
            <div class="col-md-6 mb-3">
                <label>Specialty:</label>
                <div class="text-muted">Abstract Art & Sculpture</div>
            </div>
            <div class="col-md-6 mb-3">
                <label>Joined:</label>
                <div class="text-muted">March 2017</div>
            </div>
        </div>
    </div>

</div>
