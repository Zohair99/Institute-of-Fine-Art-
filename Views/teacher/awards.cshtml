@model List<IOFA.Models.Award>
@{
    ViewData["Title"] = "awards";
    Layout = "~/Views/Shared/teacher.cshtml";
}


<!-- Main Content -->
<!-- Main Content -->
<div class="content-wrapper py-4 px-3">
    <div class="container-fluid">
        <div class="card-style">
            <div class="mb-4 d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
                <h4 class="fw-bold mb-0">
                    <i class="fas fa-trophy me-2 text-warning"></i>Student Art Awards
                </h4>
                <a href="@Url.Action("addaward", "teacher")" class="btn btn-success btn-sm">
                    <i class="fa fa-plus me-1"></i> Add Award
                </a>
            </div>

            <section class="mb-4">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark text-center">
                            <tr>
                                <th>#</th>
                                <th>Student Name</th>
                                <th>Competition</th>
                                <th>Position</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            @if (Model != null && Model.Any())
                            {
                                int i = 1;
                                foreach (var award in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@award.StudentName</td>
                                        <td>@award.Title</td>
                                        <td>@award.Position</td>
                                        <td>
                                            <a href="@Url.Action("editaward", "Teacher", new { id = award.Id })" class="btn btn-sm btn-primary me-1"><i class="fa fa-edit"></i></a>
                                            <a href="@Url.Action("DeleteAward", "Teacher", new { id = award.Id })" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">No awards available.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>

            <a href="@Url.Action("manage", "teacher")" class="btn btn-outline-primary mt-3">
                <i class="fa fa-arrow-left me-1"></i> Back to Competitions
            </a>
        </div>
    </div>
</div>