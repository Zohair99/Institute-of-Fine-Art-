@model List<IOFA.Models.C_Art>
@{
    ViewData["Title"] = "CompetitionArt";
    Layout = "~/Views/Shared/teacher.cshtml";
}



    <!-- Main Scrollable Content -->
    <div class="main-scrollable-content">
        <div class="card-style">
            <div class="mb-4 d-flex justify-content-between align-items-center">
                <h4 class="fw-bold mb-0"><i class="fa fa-palette me-2 text-danger"></i>Student Art Submissions</h4>
            </div>
            <div class="row g-4">
                @foreach (var art in Model)
                {
                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <img src="~/uploads/@art.ImagePath" class="card-img-top" alt="Competition Artwork" />

                            <div class="card-body">
                                <h5 class="card-title">@art.Title</h5>
                                <p class="card-text text-muted mb-1">
                                    <strong>Uploaded By:</strong>
                                    @art.UploadName (@art.UploadEmal)
                                </p>
                                <p class="card-text">
                                    <strong>Description:</strong> @art.Description
                                </p>
                            </div>

                            
                        </div>
                    </div>
                }
            </div>



        </div>

</div>

