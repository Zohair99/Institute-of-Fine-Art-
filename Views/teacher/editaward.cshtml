@model IOFA.Models.Award
@{
    ViewData["Title"] = "editaward";
    Layout = "~/Views/Shared/teacher.cshtml";
}



<!-- Main Content -->


<div class="content-wrapper py-4 px-4">
    <div class="card-style">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold mb-0"><i class="fas fa-edit me-2 text-warning"></i>Edit Award Details</h4>
            <a href="@Url.Action("awards", "teacher")" class="btn btn-outline-secondary">
                <i class="fa fa-arrow-left me-1"></i> Back
            </a>
        </div>

        <form asp-action="EditAward" asp-controller="Teacher" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Award Title</label>
                <input asp-for="Title" class="form-control shadow-sm" />
            </div>
            <div class="mb-3">
                <label class="form-label">Student Name</label>
                <input asp-for="StudentName" class="form-control shadow-sm" />
            </div>
            <div class="mb-3">
                <label class="form-label">Award Type</label>
                <select asp-for="Position" class="form-select shadow-sm">
                    <option disabled selected>Select Type</option>
                    <option>First Place</option>
                    <option>Runner Up</option>
                    <option>Honorable Mention</option>
                    <option>Special Jury</option>
                </select>
            </div>
            <button type="submit" class="btn btn-warning px-4 rounded-pill">
                <i class="fa fa-save me-1"></i> Save Changes
            </button>
        </form>
    </div>
</div>