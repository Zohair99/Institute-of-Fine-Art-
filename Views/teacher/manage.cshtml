@model List<IOFA.Models.Compitition>
@{
    ViewData["Title"] = "manage";
    Layout = "~/Views/Shared/teacher.cshtml";
}


<!-- Main Content -->
<div class="content-wrapper py-4 px-4">
    <div class="card-style">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold mb-0"><i class="fa fa-award me-2 text-danger"></i>Manage Art Competitions</h4>
            <a href="@Url.Action("addcompetition", "teacher")" class="btn btn-danger rounded-pill px-4">
                <i class="fa fa-plus me-1"></i> New Competition
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle bg-white shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Theme</th>
                        <th>Deadline</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].Title</td>
                            <td>@Model[i].Theme</td>
                            <td>@Model[i].SubmitDate</td>

                            <td>
                                <a href="@Url.Action("editcompetition", "teacher", new { id = Model[i].Id })"
                                   class="btn btn-sm btn-outline-primary me-2">
                                    <i class="fa fa-edit me-1"></i>Edit
                                </a>

                                <a href="@Url.Action("DeleteCompetition", "teacher", new { id = Model[i].Id })"
                                   onclick="return confirm('Are you sure you want to delete this competition and all related artworks?');"
                                   class="btn btn-sm btn-outline-danger">
                                    <i class="fa fa-trash me-1"></i> Delete
                                </a>



                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
