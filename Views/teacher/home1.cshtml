
@{
    ViewData["Title"] = "home1";
    Layout = "~/Views/Shared/teacher.cshtml";
}


<!-- Content -->
<div>
    <div class="container-fluid">

        <div class="row g-4">
            <div class="col-lg-8">
                <div class="welcome-box">
                    <h4 class="fw-bold mb-3">Welcome, @Context.Session.GetString("TeacherName")</h4>
                    <p class="mb-3">Monitor your students' artistic growth, stay updated on upcoming events, and manage your profile all from this central hub.</p>
                </div>
            </div>
        </div>

        <!-- Profile and Tasks -->
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card-box profile-summary">
                    <div class="bg-white rounded shadow-sm text-center p-4 h-100">
                        <img src="@Url.Content("~/Asset/img/user.jpg")" alt="Profile Picture"
                             class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                        <h5 class="fw-bold mb-1"> @Context.Session.GetString("TeacherName")</h5>
                        <p class="text-muted">Teacher at IOFA Gallery</p>
                        <hr>
                        <div class="text-start">
                            <h6 class="fw-semibold mb-2">Teacher's Info</h6>
                            <p class="text-muted mb-1">Art Instructor, Senior Faculty</p>
                            <p><i class="fa fa-envelope me-2"></i>@Context.Session.GetString("TeacherEmail")</p>
                            <p><i class="fa fa-phone-alt me-2"></i>@Context.Session.GetString("TeacherPhone")</p>
                            <p class="text-muted mb-0">Department: Visual Arts</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-box">
                    <h5 class="fw-bold mb-3 text-primary"><i class="fa fa-calendar-check me-2"></i>Upcoming Tasks</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item border-0 px-0 py-3 task-hover d-flex justify-content-between align-items-center">
                            <div><i class="fa fa-folder-open text-primary me-2"></i> Review student portfolios</div>
                            <span class="badge bg-primary">Today</span>
                        </li>
                        <li class="list-group-item border-0 px-0 py-3 task-hover d-flex justify-content-between align-items-center">
                            <div><i class="fa fa-file-alt text-warning me-2"></i> Submit exhibition report</div>
                            <span class="badge bg-warning text-dark">July 5</span>
                        </li>
                        <li class="list-group-item border-0 px-0 py-3 task-hover d-flex justify-content-between align-items-center">
                            <div><i class="fa fa-paint-brush text-success me-2"></i> Finalize competition entries</div>
                            <span class="badge bg-success">3 Days</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>