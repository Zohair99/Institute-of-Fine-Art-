@model IOFA.Models.Award
@{
    ViewData["Title"] = "addaward";
    Layout = "~/Views/Shared/teacher.cshtml";
}


<!-- Main Content -->
<div class="content-wrapper py-4 px-4">
    <div class="card-style">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold mb-0"><i class="fas fa-plus-circle me-2 text-danger"></i>Add New Art Award</h4>
            <a href="@Url.Action("awards", "teacher")" class="btn btn-outline-secondary">
                <i class="fa fa-arrow-left me-1"></i> Back
            </a>
        </div>



        <form asp-action="AddAward" method="post">
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control shadow-sm" placeholder="e.g., Best Creativity Award" />
            </div>

            <select asp-for="StudentName" class="form-select shadow-sm" asp-items="ViewBag.StudentList">
                <option disabled selected>Select Student</option>
            </select>
            <span asp-validation-for="StudentName" class="text-danger"></span>



            <div class="mb-3">
                <label asp-for="Position" class="form-label"></label>
                <select asp-for="Position" class="form-select shadow-sm">
                    <option selected disabled>Select Type</option>
                    <option>First Place</option>
                    <option>Runner Up</option>
                    <option>Honorable Mention</option>
                    <option>Special Jury</option>
                </select>
            </div>

            <button type="submit" class="btn btn-danger px-4 rounded-pill">
                <i class="fa fa-plus me-1"></i> Add Award
            </button>
        </form>

    </div>
</div>
