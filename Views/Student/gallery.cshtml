@model List<IOFA.Models.Art>
@{
    ViewData["Title"] = "gallery";
    Layout = "~/Views/Shared/Student.cshtml";
}



<!-- Gallery Content -->
<div class="dashboard-content pt-4 px-4">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 fw-bold">🎨 My Artworks</h4>
            <a href="@Url.Action("upload", "Student")" class="btn btn-danger btn-sm rounded-pill">
                <i class="fa fa-upload me-1"></i> Upload Artwork
            </a>
        </div>

        <div class="row g-4">
            @foreach (var art in Model)
            {
                <div class="col-12 col-md-6 col-xl-4">
                    <div class="card gallery-card h-100">
                        <img src="@art.Path" class="card-img-top" alt="Artwork">
                        <div class="card-body d-flex flex-column">
                            <h6 class="fw-semibold text-truncate mb-1">@art.Title</h6>
                            <p class="text-muted small mb-3">@art.Description</p>
                            <div class="mt-auto d-flex justify-content-between">
                                <a href="@Url.Action("Details", "Student", new { id = art.Id })" class="btn btn-outline-primary btn-sm btn-action">
                                    <i class="fa fa-eye me-1"></i> View
                                </a>
                                <a href="@Url.Action("Edit", "Student", new { id = art.Id })" class="btn btn-outline-success btn-sm btn-action">
                                    <i class="fa fa-edit me-1"></i> Edit
                                </a>

                                <a href="@Url.Action("Delete", "Student", new { id = art.Id })" class="btn btn-outline-danger btn-sm btn-action">
                                    <i class="fa fa-trash me-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>