
@{
    ViewData["Title"] = "editprofile";
    Layout = "~/Views/Shared/Student.cshtml";
}


<!-- Edit Form -->
<div class="dashboard-content pt-4 px-4">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="form-card">
                    <h4 class="fw-bold mb-3 text-danger"><i class="fa fa-user-edit me-2"></i> Edit Profile</h4>
                    <form method="post" action="@Url.Action("SaveProfile", "Student")">
                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input type="text" name="FullName" class="form-control" value="@User.Identity.Name" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email Address</label>
                            <input type="email" name="Email" class="form-control" value="student@example.com" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input type="text" name="Phone" class="form-control" value="+92 123 456789" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Skills</label>
                            <input type="text" name="Skills" class="form-control" value="Drawing, Digital Art, Painting" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">About Me</label>
                            <textarea name="About" class="form-control" rows="4">I'm a passionate art student exploring different styles.</textarea>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Profile", "Student")" class="btn btn-outline-secondary">
                                <i class="fa fa-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>