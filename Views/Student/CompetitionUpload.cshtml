@model IOFA.Models.Art
@{
    ViewData["Title"] = "CompetitionUpload";
    Layout = "~/Views/Shared/Student.cshtml";
}


<!-- Upload Form -->
<div class="dashboard-content pt-4 px-4">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="form-card">
                    <h4 class="fw-bold mb-3 text-danger"><i class="fa fa-upload me-2"></i> Upload New Artwork</h4>
                    <form method="post" enctype="multipart/form-data" asp-action="CompetitionUpload">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Artwork Title</label>
                            <input type="text" name="Title" class="form-control" placeholder="Enter artwork title" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Description</label>
                            <textarea name="Description" rows="4" class="form-control" placeholder="Enter artwork description" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Upload Image</label>
                            <input type="file" name="ArtworkImage" class="form-control" required />
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("competition", "Student")" class="btn btn-outline-secondary">
                                <i class="fa fa-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-upload me-1"></i> Upload
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>