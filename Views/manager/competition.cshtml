@model List<IOFA.Models.Compitition>

@{
    Layout = "~/Views/Shared/Manager.cshtml";
}
<div class="content-wrapper py-4 px-4">
    <div class="card-style">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold mb-0"><i class="fa fa-award me-2 text-danger"></i>Manage Art Competitions</h4>
            
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle bg-white shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Theme</th>
                        <th>Deadline</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].Title</td>
                            <td>@Model[i].Theme</td>
                            <td>@Model[i].SubmitDate</td>

                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
