<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/jpeg" href="@Url.Content("~/images/logo-updated-re.jpg")" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
          integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/images/style.css">
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>

<body>
    <nav class="navbar">
        <div class="container">
            <div class="logo-container">
                <div class="logo-bar">
                    <img src="~/images/logo-updated-re.jpg" alt="Logo">
                </div>
                <h1 class="logo-text">Institute of Fine Arts</h1>
            </div>

            <ul class="nav-links">
                <li><a href="@Url.Action("Index", "Institute")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">HOME</a></li>
                <li><a href="@Url.Action("About", "Institute")" class="@(ViewContext.RouteData.Values["action"].ToString() == "About" ? "active" : "")">ABOUT</a></li>
                <li><a href="@Url.Action("EmergingTalent", "Institute")" class="@(ViewContext.RouteData.Values["action"].ToString() == "EmergingTalent" ? "active" : "")">EMERGING TALENT</a></li>
                <li><a href="@Url.Action("Artist", "Institute")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Artist" ? "active" : "")">ARTISTS</a></li>
                <li><a href="@Url.Action("Exhibition", "Institute")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Exhibition" ? "active" : "")">EXHIBITIONS</a></li>
                <li><a href="@Url.Action("Press", "Institute")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Press" ? "active" : "")">PRESS AND MEDIA</a></li>
                <li><a href="@Url.Action("Space", "Institute")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Space" ? "active" : "")">SPACE</a></li>
                <li><a href="@Url.Action("Contact", "Institute")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Contact" ? "active" : "")">CONTACT US</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle">
                        DASHBOARD <span class="arrow"><i class="fa-solid fa-caret-down"></i></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("TeacherRegister", "teacher")">Teacher Dashboard</a></li>
                        <li><a href="@Url.Action("ManagerRegister", "manager")">Manager Dashboard</a></li>
                        <li><a href="@Url.Action("AdminRegister", "admin")">Admin Dashboard</a></li>
                    </ul>
                </li>
            </ul>

                <div class="nav-actions">
                    <button class="hamburger" aria-label="Toggle navigation">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <!-- footer -->

    <footer class="footer-section">
        <div class="footer-content-wrapper">
            <div class="mailing-list-container">
                <div class="mailing-list-text">
                    <h2>Join Our Mailing List</h2>
                    <p>Sign up to receive emails featuring the latest news and events.</p>
                </div>
                <form class="email-signup-form">
                    <div class="email-signup">
                        <input type="email" placeholder="Your Email Address" required>
                        <button type="submit">SEND</button>
                    </div>
                </form>
            </div>

            <div class="gallery-and-social">
                <div class="gallery-images">
                    <img src="~/images/footer1.png" alt="Art Piece 1" class="gallery-image">
                    <img src="~/images/footer2.png" alt="Art Piece 2" class="gallery-image">
                    <img src="~/images/footer3.png" alt="Art Piece 3" class="gallery-image">
                    <img src="~/images/footer4.png" alt="Art Piece 4" class="gallery-image">
                    <img src="~/images/footer5.png" alt="Art Piece 4" class="gallery-image">
                </div>
                <div class="social-icons">
                    <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="social-icon"><i class="far fa-envelope"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                </div>
            </div>

            <div class="contact-info-section">
                <div class="contact-item">
                    <h3>Institute of Fine Arts</h3>
                    <p>Rangoonwala Community Centre,</p>
                    <p>Dhoraji Colony, Karachi-74800</p>
                </div>
                <div class="contact-item">
                    <p>Muhammad Zohair</p>
                    <p>+ (92) 0334-3574436</p>
                    <p>Umair Rehan</p>
                    <p>+ (92) 0331-3396429</p>
                </div>
                <div class="contact-item">
                    <p>11am - 7pm</p>
                    <p>Monday to Saturday</p>
                </div>
            </div>

            <div class="footer-bottom">
                <hr>
                <div class="footer-links-copyright">
                    <a href="#">PRIVACY POLICY</a>
                    <span>© 2025 Institute of Fine Arts - SITE BY: BD</span>
                </div>
            </div>
        </div>
    </footer>

    <!-- footer ends -->
    @RenderSection("Scripts", required: false)
</body>

</html>

<script src="~/images/script.js"></script>

