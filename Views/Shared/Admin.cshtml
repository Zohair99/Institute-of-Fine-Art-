

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Admin Dashboard - VM ART GALLERY</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="~/assets/img/favicon.ico" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="~/Admin/css/style.css" rel="stylesheet" />

    
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="brand d-flex align-items-center mb-4">
                <i class="fa fa-user-shield fs-4 me-2 text-danger"></i>
                IOFA Gellary
            </div>
            <div class="d-flex align-items-center mb-4">
                <img src="~/Asset/img/user.jpg" class="rounded-circle" style="width: 45px; height: 45px;" />
                <div class="ms-3">
                    <h6 class="mb-0 fw-semibold">@Context.Session.GetString("AdminName")</h6>
                    <small class="text-muted">Administrator</small>
                </div>
            </div>
            <nav class="nav flex-column">
                <a href="@Url.Action("AdminHome", "Admin")" class="nav-link py-2 px-3 mb-2 text-dark">
                    <i class="fa fa-chart-line me-2"></i> Dashboard
                </a>

                <a href="@Url.Action("artwork", "Admin")" class="nav-link py-2 px-3 mb-2 text-dark">
                    <i class="fas fa-user me-2"></i> Artworks
                </a>

                <a href="@Url.Action("Students", "Admin")" class="nav-link py-2 px-3 mb-2 text-dark">
                    <i class="fa fa-users me-2"></i> Students
                </a>
                <a href="@Url.Action("Teachers", "Admin")" class="nav-link py-2 px-3 mb-2 text-dark">
                    <i class="fa fa-award me-2"></i> Teachers
                </a>
            </nav>
        </div>

        <!-- Content -->
        <div class="content" id="content">
            <!-- Topbar -->
            <div class="topbar d-flex justify-content-between align-items-center shadow-sm">
                <button id="toggleSidebar" class="btn btn-sm btn-outline-dark"><i class="fa fa-bars"></i></button>
                <form class="d-none d-md-flex w-50 ms-3">
                    <input class="form-control shadow-sm rounded-pill px-4" type="search" placeholder="Search...">
                </form>
                <div class="d-flex align-items-center ms-auto">
                    <div class="dropdown me-3">
                        <a href="#" class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown">
                            <i class="fa fa-bell me-1 text-warning"></i> <span class="d-none d-lg-inline">Notifications</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                            <li><a class="dropdown-item text-center" href="#">No notifications</a></li>
                        </ul>
                    </div>
                    <div class="dropdown">
                        <a href="#" class="nav-link dropdown-toggle d-flex align-items-center text-dark" data-bs-toggle="dropdown">
                            <img class="rounded-circle me-2" src="~/Asset/img/user.jpg" style="width: 36px; height: 36px;" alt="Avatar">
                            <span class="d-none d-lg-inline fw-semibold">
                                @Context.Session.GetString("AdminName") 
                            </span>


                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                            <li><a class="dropdown-item" href="@Url.Action("Profile", "Admin")">My Profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-action="Logout" asp-controller="admin" >Log Out</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Scrollable Body -->
            <div class="main-scrollable-content">
                <div>
                    @RenderBody()
                </div>

                <!-- Footer -->
                <div class="footer">
                    &copy; 2025 <strong>VM Art Gallery</strong>. Admin Panel.
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const toggleBtn = document.getElementById('toggleSidebar');
        const sidebar = document.getElementById('sidebar');
        const content = document.getElementById('content');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('full');
        });
    </script>
</body>
</html>
