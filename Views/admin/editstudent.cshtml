@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="card-style">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold mb-0">Edit Student</h4>
        <a href="@Url.Action("Students", "Admin")" class="btn btn-sm btn-outline-secondary"><i class="fa fa-arrow-left me-1"></i> Back</a>
    </div>
    <form method="post" action="@Url.Action("UpdateStudent", "Admin")">
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Full Name</label>
                <input type="text" class="form-control" value="Fatima Zahra" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" value="fatima.zahra@example.com" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Class</label>
                <input type="text" class="form-control" value="Grade 8" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Date of Birth</label>
                <input type="date" class="form-control" value="2009-04-15" />
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" value="123 Street, Karachi" />
        </div>
        <div class="mb-3">
            <label class="form-label">Parent Contact</label>
            <input type="text" class="form-control" value="+92-300-1234567" />
        </div>
        <button type="submit" class="btn btn-danger px-4">Save Changes</button>
    </form>
</div>
