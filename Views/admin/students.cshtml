@model List<IOFA.Models.Register>


@{
    Layout = "~/Views/Shared/Admin.cshtml";
}
        <div class="card-style">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">All Registered Students</h5>
                <a class="btn btn-sm btn-success" href="@Url.Action("addstudent", "admin")">+ Add New Student</a>
            </div>
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">Profile</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Registered On</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <img src="~/Admin/img/user.jpg" class="rounded-circle" width="40" />
                            </td>
                            <td>@student.Name</td>
                            <td>@student.Email</td>
                            <td>@student.CreatedDate.ToString("yyyy-MM-dd")</td>
                            <td class="text-center">
                                <form asp-action="DeleteStudent" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@student.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this student?');">
                                        Delete
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No students registered yet.
        </div>
    }


        </div>
