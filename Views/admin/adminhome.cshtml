@{
    ViewData["Title"] = "Admin Home";
    Layout = "~/Views/Shared/Admin.cshtml";

    var students = ViewBag.Students as List<IOFA.Models.Register>;
    var teachers = ViewBag.Teachers as List<IOFA.Models.Teacher>;
}

<!-- Welcome -->
<div class="card-style text-center mb-4">
    <h5 class="fw-bold mb-2">Welcome to the Admin Dashboard</h5>
    <p class="text-muted">Utilize the administrative tools below to efficiently manage the IOFA Gallery system.</p>
</div>


<div class="row g-4">
    <div class="col-md-6">
        <div class="card-box profile-summary">
            <div class="bg-white rounded shadow-sm text-center p-4 h-100">
                <img src="@Url.Content("~/Asset/img/user.jpg")" alt="Profile Picture"
                     class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                <h5 class="fw-bold mb-1"> @Context.Session.GetString("AdminName")</h5>
                <p class="text-muted">Administrator at IOFA Gallery</p>
                <hr>
                <div class="text-start">
                    <h6 class="fw-semibold mb-2">Admin's Info</h6>
                    <p class="text-muted mb-1">Art Instructor, Senior Administrator</p><br />
                    <p><i class="fa fa-envelope me-2"></i>@Context.Session.GetString("AdminEmail")</p>
                    <p><i class="fa fa-phone-alt me-2"></i>@Context.Session.GetString("AdminPhone")</p>
                    <p class="text-muted mb-0">Department: Administration</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 bg-white p-4 h-100">
        <div class="card-box ">
            <h5 class="fw-bold mb-3 text-primary "><i class="fa fa-calendar-check me-2"></i>Upcoming Tasks</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item border-0 px-0 py-3 task-hover d-flex justify-content-between align-items-center">
                    <div><i class="fa fa-folder-open text-primary me-2"></i> Review student portfolios</div>
                    <span class="badge bg-primary">Today</span>
                </li>
                <li class="list-group-item border-0 px-0 py-3 task-hover d-flex justify-content-between align-items-center">
                    <div><i class="fa fa-file-alt text-warning me-2"></i> Submit exhibition report</div>
                    <span class="badge bg-warning text-dark">July 5</span>
                </li>
                <li class="list-group-item border-0 px-0 py-3 task-hover d-flex justify-content-between align-items-center">
                    <div><i class="fa fa-paint-brush text-success me-2"></i> Finalize competition entries</div>
                    <span class="badge bg-success">3 Days</span>
                </li>
            </ul>
        </div>
    </div>
</div><br /><br />

<!-- Student Table -->
<div class="card-style mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="fw-bold">Student Information</h5>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Profile</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Joined On</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in students)
                {
                    <tr>
                        <td><img src="~/Admin/img/user.jpg" class="rounded-circle" width="40" /></td>
                        <td>@student.Name</td>
                        <td>@student.Email</td>
                        <td>@student.CreatedDate.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Teacher Table -->
<div class="card-style">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="fw-bold">Teacher Information</h5>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Profile</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Joined On</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in teachers)
                {
                    <tr>
                        <td><img src="~/Admin/img/user.jpg" class="rounded-circle" width="40" /></td>
                        <td>@teacher.Name</td>
                        <td>@teacher.Email</td>
                        <td>@teacher.CreatedDate.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
